<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>
    <div class="container">
        <h1>URL shirnker</h1>
        <form action="/shorturl" method="POST">
            <label for="fullUrl" class="sr-only">Url</label>
            <input required type="url" name="fullUrl" id="fullUrl" placeholder="Enter url" class="form-control col mr-1">
            <button type="submit" class="btn btn-success">Shrink</button>
        </form>
        <table class="table table-stripped">
            <thead>
                <tr>
                    <th>Full Url</th>
                    <th>Short Url</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% url.forEach(short =>{ %>
                    <tr>
                        <td><a href="<%= short.full %>"><%= short.full %></a></td>
                        <td><a href="<%= short.short %>"><%= short.short %></a></td>
                        <td><%= short.clicks %></td>
                    </tr>
                 <%  }) %>
                
            </tbody>
        </table>
    </div>
</body>

</html>